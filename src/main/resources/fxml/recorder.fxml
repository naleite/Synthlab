<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.TextField?>
        
<fx:root prefHeight="200" styleClass="module" type="javafx.scene.layout.BorderPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <center>
        <VBox spacing="35"  alignment="CENTER" BorderPane.alignment="CENTER">
            <HBox fx:id="switchBox" alignment="CENTER"/>
            <HBox spacing="5" alignment="CENTER">
                <TextField fx:id="filepath" maxWidth="250" minWidth="250"/>
                <Button text="..." fx:id="chooseFilepath"/>
            </HBox>
        </VBox>
    </center>
</fx:root>
